digraph ControlModeFSM {
    rankdir=LR;
    node [shape=ellipse, fontsize=12];

    None        [label="monostate"];
    Idle        [label="IdleMode"];
    High        [label="HighLevelMode"];
    Low         [label="LowLevelMode"];
    Emergency   [label="EmergencyMode", shape=doublecircle];

    // monostate
    None -> Idle;
    None -> Emergency;

    // IdleMode
    Idle -> High;
    Idle -> Low;
    Idle -> Emergency;

    // HighLevelMode
    High -> Idle;
    High -> Low;
    High -> Emergency;

    // LowLevelMode
    Low -> Idle;
    Low -> High;
    Low -> Emergency;
}
